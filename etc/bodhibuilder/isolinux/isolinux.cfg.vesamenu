  #menu label ^Legacy/BIOS Direct Install __DISTNAME__
  #kernel /casper/vmlinuz
  #append  noprompt file=/cdrom/preseed/custom.seed boot=casper only-ubiquity initrd=/casper/initrd.lz quiet splash ---
  
label memtest
  menu label ^Run memtest
  kernel /install/memtest
  append -
  
label check
  menu label ^Check __DISTNAME__ Distro Integrity
  kernel /casper/vmlinuz
  append  boot=casper integrity-check initrd=/casper/initrd.lz quiet splash --

label hd
  menu label ^Boot the First PC Hard Disk
  localboot 0x80
  append -

label hdVB
  menu label ^Boot the First VirtualBox Hard Disk
  kernel chain.c32
  append hd0 0

